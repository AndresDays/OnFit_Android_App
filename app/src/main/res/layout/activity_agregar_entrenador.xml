<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarEntrenador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="410dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textAlignment="center"
            android:textColor="#2C0735"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNombreEntrenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/rating_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ems="10"
            android:hint="@string/nombre"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtAgregarHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/rating_horizontal_margin"
            android:layout_marginVertical="@dimen/rating_vertical_margin"
            android:ems="10"
            android:hint="@string/horarioE"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtGymAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/rating_horizontal_margin"
            android:ems="10"
            android:hint="@string/gymE"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtNumeroImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/rating_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ems="10"
            android:hint="@string/imagen"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/imgBtnAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:backgroundTint="#613DC1"
            app:srcCompat="@drawable/baseline_add_24" />

        <Button
            android:id="@+id/btnRegresarEntrenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/button_margin_regresar"
            android:backgroundTint="#613DC1"
            android:text="@string/regresar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>